<?xml version="1.0" encoding="utf-8"?>
<informationscreen>
	<minpluginversion>0.2</minpluginversion>
	<requiresplugin>Mail</requiresplugin>
	<template>
		<name>You have got mail</name>
		<description>Shows indication when there are new mails</description>
		<parameter type="text" id="screenname" name="Screen name" value="You've Got Mail!"/>
		<parameter type="text" id="screenorder" name="Screen order" value="50"/>
		<parameter type="text" id="visibilitytime" name="Visible number of seconds" value="5"/>
		<parameter type="singlelist" id="fontsize" name="Font size" value="Medium" data="Huge=Huge,Large=Large,Medium=Medium,Small=Small"/>
	</template>
</informationscreen>

